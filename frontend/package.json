{
  "name": "linketinder-frontend",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "build:css": "tailwindcss -i ./css/tailwind.css -o ./public/styles.css --minify",
    "dev:css": "tailwindcss -i ./css/tailwind.css -o ./public/styles.css --watch",
    "dev": "vite --config vite.config.mts",
    "build:vite": "npm run build:css && npm run build && vite build --config vite.config.mts",
    "preview": "vite preview --config vite.config.mts",
    "dev:all": "concurrently -n tsc,css,vite -c blue,magenta,green \"npm:watch\" \"npm:dev:css\" \"vite --config vite.config.mts\""
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@types/node": "^24.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.0.0",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
