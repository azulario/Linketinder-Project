<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>LinkeTinder REST API</display-name>

    <!-- Configuração para aceitar UTF-8 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.linketinder.servlet.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Servlet de Candidatos -->
    <servlet>
        <servlet-name>CandidatoServlet</servlet-name>
        <servlet-class>com.linketinder.servlet.CandidatoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidatoServlet</servlet-name>
        <url-pattern>/api/candidatos/*</url-pattern>
    </servlet-mapping>

    <!-- Servlet de Empresas -->
    <servlet>
        <servlet-name>EmpresaServlet</servlet-name>
        <servlet-class>com.linketinder.servlet.EmpresaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmpresaServlet</servlet-name>
        <url-pattern>/api/empresas/*</url-pattern>
    </servlet-mapping>

    <!-- Servlet de Vagas -->
    <servlet>
        <servlet-name>VagaServlet</servlet-name>
        <servlet-class>com.linketinder.servlet.VagaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VagaServlet</servlet-name>
        <url-pattern>/api/vagas/*</url-pattern>
    </servlet-mapping>

    <!-- Página inicial -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>